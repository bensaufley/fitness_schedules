<%= provide(:title, "Sign in") %>

<section id="signin">
	<%= form_for(:session, url: sessions_path) do |f| %>
	
		<%= select_tag "user_type", options_for_select(["Trainer", "Client"],'Client') %>
		<div id="user_type_switch">
			<div id="trainer">Trainer</div>
			<div id="client">Client</div>
		</div>
		<label for="<%= :email %>">
			<strong>Email</strong>
			<%= f.text_field :email, :placeholder => "Email" %>
		</label>
		
		<label for="<%= :password %>">
			<strong>Password</strong>
			<%= f.password_field :password, :placeholder => "Password" %>
		</label>
		
		<%= f.submit "Sign in", id: 'submit' %>
		
	<% end %>
</section>