<%= provide(:title, "Sign in") %>

<%= form_for(:session, url: sessions_path) do |f| %>

	<%= select_tag "user_type", options_for_select(["Trainer", "Client"]) %>
	
	<%= f.label :email %>
	<%= f.text_field :email %>
	
	<%= f.label :password %>
	<%= f.password_field :password %>
	
	<%= f.submit "Sign in", class: 'btn btn-large btn-primary' %>
	
<% end %>