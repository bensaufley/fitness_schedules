<% provide(:title, text: 'All Clients') %>

<%= will_paginate %>
<ul><% @clients.each do |client| %>
	<li>
		<%= link_to client.name, client_path(client) %> | 
			<% if client.trainer == nil %>
				<%= link_to "Train this client", add_trainer_client_path(client) %> 
			<% elsif client.trainer == current_user %>
				<%= link_to "Remove this client", remove_trainer_client_path(client) %>
			<% end %>
	</li>
<% end %></ul>