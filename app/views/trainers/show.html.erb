<% provide(:title, @trainer.name) %>
<h2><%= @trainer.name %></h2>
<ul class="clients"><% @trainer.clients.each do |client| %>
<li><%= link_to client.name, client_path(client), :class => "client" %> | <%= link_to "Remove client", remove_trainer_client_path(client), :confirm => "Are you sure you wish to remove " + client.name + " as a client?", :class => "remove" %></li>
<% end %></ul>