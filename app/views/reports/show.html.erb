<% provide(:title, "Report") %>
<% params[:direc] == "down" ? direction = "up" : direction = "down" %>

<table>
  <tr>
    <td><%= link_to "Client", { sort: "client", direc: direction, report: params[:report] } %></td>
    <td><%= link_to "Trainer", { sort: "trainer", direc: direction, report: params[:report] } %></td>
    <td><%= link_to "Scheduled Date", { sort: "scheduled_date", direc: direction, report: params[:report] } %></td>
    <td><%= link_to "Status", { sort: "rendered", direc: direction, report: params[:report] } %></td>
    <td><%= link_to "Date last updated", { sort: "updated_at", direc: direction, report: params[:report] } %></td>
  </tr>
  <% @schedules.each do |sched| %>
    <tr>
      <td><%= sched.client.name %></td>
      <td><% if sched.trainer %>
        <%= sched.trainer.name %>
      <% end %></td>
      <td><%= sched.scheduled_date %></td>
      <td><%= how_rendered(sched) %></td>
      <td><%= sched.updated_at %></td>
    </tr>
  <% end %>
</table>