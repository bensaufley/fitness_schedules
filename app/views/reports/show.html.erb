<% provide(:title, "Report") %>


<table>
  <tr>
    <td>Client</td>
    <td>Trainer</td>
    <td><%= link_to "Scheduled Date", { sort: "scheduled_date", report: params[:report] } %></td>
    <td><%= link_to "Status", { sort: "rendered", report: params[:report] } %></td>
    <td><%= link_to "Date last updated", { sort: "updated_at", report: params[:report] } %></td>
  </tr>
  <% @schedules.each do |sched| %>
    <tr>
      <td><%= sched.client.name %></td>
      <td><% if sched.trainer %>
        <%= sched.trainer.name %>
      <% end %></td>
      <td><%= sched.scheduled_date %></td>
      <td><%= how_rendered(sched) %></td>
      <td><%= sched.updated_at %></td>
    </tr>
  <% end %>
</table>