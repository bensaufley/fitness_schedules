<% provide(:title, "Full Report for #{@trainer.name}") %>

<%= params %><br>

<table>
  <tr>
    <td>Client</td>
    <td>Scheduled Date</td>
    <td>Status</td>
    <td>Date last updated</td>
  </tr>
  <% @schedules.each do |sched| %>
    <tr>
      <td> <%= sched.client.name %></td>
      <td><%= sched.scheduled_date %></td>
      <td><%= how_rendered(sched) %></td>
      <td><%= sched.updated_at %></td>
    </tr>
  <% end %>
</table>